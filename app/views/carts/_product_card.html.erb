<div class="rounded-lg shadow-md">
  <div class="justify-between mb-6 rounded-lg bg-white p-6 shadow-md sm:flex sm:justify-start">
    <!--        <img src="https://images.unsplash.com/photo-1515955656352-a1fa3ffcd111?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="product-image" class="w-full rounded-lg sm:w-40" />-->
    <div class="sm:ml-4 sm:flex sm:w-full sm:justify-between">
      <div class="sm:mt-0 mr-2">
        <h2 class="text-lg font-bold text-gray-900"><%= carts_product.product.name %></h2>
      </div>
      <div class="mt-4 flex justify-between sm:space-y-6 sm:mt-0 sm:block sm:space-x-6">
        <div class="flex items-center border-gray-100">
          <%= link_to '-', carts_add_product_path(id: carts_product.product.id,
                                                  quantity: carts_product.quantity - 1,
                                                  product_added_from_cart: true),
                                                  data: { turbo_method: :post },
                                                  class: "cursor-pointer rounded-l bg-gray-100 py-1 px-3.5 duration-100 hover:bg-blue-500 hover:text-blue-50" %>
            <input class="h-8 w-10 border bg-white text-center text-xs outline-none" type="number" value="<%= carts_product.quantity %>" min="1" />
          <%= link_to '+', carts_add_product_path(id: carts_product.product.id,
                                                  quantity: carts_product.quantity + 1,
                                                  product_added_from_cart: true),
                                                  data: { turbo_method: :post },
                                                  class: "cursor-pointer rounded-r bg-gray-100 py-1 px-3 duration-100 hover:bg-blue-500 hover:text-blue-50" %>
          <div class="flex-col">

            <% if carts_product.has_offers? %>
              <div class="flex items-center ml-4">
                <p class="text-sm"><%= carts_product.get_product_price_with_discount %></p><p class="text-sm">€</p>
              </div>
              <% if carts_product.show_product_price? %>
                <div class="flex right-0 ml-4">
                  <p class="text-xs line-through"><%= carts_product.get_product_price %></p><p class="text-sm">€</p>
                </div>
              <% end %>
            <% else %>
              <div class="flex items-center ml-4">
                <p class="text-sm"><%= carts_product.get_product_price %></p><p class="text-sm">€</p>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>